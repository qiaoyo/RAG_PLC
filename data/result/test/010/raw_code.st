VAR_INPUT
IN : REAL;
HYST : REAL;
VAL1 : REAL;
VAL2 : REAL;
END_VAR

VAR_OUTPUT
Q1 : BOOL;
Q2 : BOOL;
END_VAR

VAR
X : REAL;
END_VAR

(*@KEY@: WORKSHEET
