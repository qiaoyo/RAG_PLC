X := hyst * 0.5;
IF in < val1 - X THEN
q1 := TRUE;
ELSIF in > val1 + X THEN
q1 := FALSE;
END_IF;
IF in < val2 - X THEN
q2 := FALSE;
ELSIF in > val2 + X THEN
q2 := TRUE;
END_IF;